# Claude Code UI - Production Image
# Main application image containing backend service and frontend build artifacts
# Purpose: Production deployment providing complete Web UI service
#
# Build: docker build -f docker/Dockerfile.main -t ccr.ccs.tencentyun.com/patent/claude-code-ui:latest .
# Build with custom base: docker build --build-arg BASE_IMAGE=myregistry/base:latest -f docker/Dockerfile.main ...

# Base image with build dependencies and Node.js modules
# Use --build-arg to override the default
ARG BASE_IMAGE=claude-code-ui:base
FROM ${BASE_IMAGE}

# Switch back to root user to copy files and install additional tools
USER root

# Install gosu (for user switching)
RUN apt-get update && apt-get install -y gosu && rm -rf /var/lib/apt/lists/*

# Set working directory to application directory
WORKDIR /app

# Copy application code
COPY --chown=node:node backend ./backend
COPY --chown=node:node shared ./shared
COPY --chown=node:node dist ./dist
COPY --chown=node:node extensions/.claude /app/extensions/.claude

# Copy container configuration files (seccomp/apparmor profiles)
# Only needed in /app/containers/ for reading by main application
# The config is passed to Docker API, not mounted into user containers
COPY --chown=node:node workspace/containers /app/containers

RUN mkdir -p /workspace /workspace/.claude /workspace/database && \
    chown -R node:node /workspace /app

# Copy entrypoint script for handling Docker socket and data directory permissions
# This script runs as root to set up permissions, then switches to node user
COPY --chown=root:root docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Note: Do not switch user here, let the entrypoint script run as root first, then switch to node user

# Environment variables
ENV NODE_ENV=production \
    PORT=3001 \
    # Working data directory (consistent with mount point)
    WORKSPACE_DIR=/workspace \
    # Claude configuration directory
    CLAUDE_CONFIG_DIR=/workspace/.claude \
    # Database path
    DATABASE_PATH=/workspace/database/claude-code.db \
    # PATH includes node binaries
    PATH="/app/node_modules/.bin:${PATH}"

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3001/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1))" || exit 1

# Use entrypoint script for permission setup and application startup
ENTRYPOINT ["/entrypoint.sh"]
